	<!-- 请求url日志记录过滤器 -->
	<filter>
		<filter-name>CheckParamFilter</filter-name>
		<filter-class>com.ydp.filter.CheckParamFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CheckParamFilter</filter-name>
		<url-pattern>/rest/*</url-pattern>
	</filter-mapping>








